  body
  div(ng-include="'/common/views/partials/version.html'")
  nav.navbar.shadow-bottom(role="navigation")
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#collapse-button")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/")
          img.pull-left(src="/common/assets/logo/logo-sm.png")
          p.pull-left Techno
            span Rides
  section.banner
    .container
      .row
        .col-sm-6
          img.img-responsive.hidden-xs.hidden-md(src="assets/demoimg.png" style="margin-top: 102px;")
        .col-xs-12.col-sm-6
          br
          br
          .col-xs-12
            h1.uppercase(translate) FormTitle
            p(translate) FormSubtitle
          br
          br
          form(name="demos" ng-submit="demos.$valid && sendEmail(demo)" novalidate ng-class="{submited: demos.submited}")
            .col-xs-12
              label(translate) cardName
              input.form-control(type="text" ng-model="demo.name" required ng-pattern="/[a-zA-Z,\. ]+/" name="name")
              br

            .col-xs-12
              label(translate) Email
              input.form-control(type="text" ng-model="demo.email" required ng-pattern="/.+@.+\\..+/" name="email")
              br

            .col-xs-8
              label(translate) Country
              select.form-control(ng-model="demo.country" ng-options="country for country in countries" name="country")
                option(value="{{location}}" ng-if="!demo.country")
              br
            .col-xs-4
              label(translate) State
              input.form-control(ng-model="demo.state" required)
              br

            .col-xs-8
              label(translate) City
              input.form-control(ng-model="demo.city" required)

              br
            .col-xs-4
              label(translate) Zip
              input.form-control(ng-model="demo.zip" required)
              br

            .col-xs-12
              label(translate) BillingAddress
              input.form-control(ng-model="demo.billingAddress" required)
              br
            .col-xs-12
              label(translate) Cardnumber
              input.form-control(ng-model="demo.cardNumber" required)
              br
            .col-xs-4
              label(translate) CVV
              input.form-control(ng-model="demo.cvv" required)
              br
            .col-xs-4
              label(translate) ExpMonth
              select.form-control(ng-model="demo.expiration.month" ng-options="month for month in months" required)

              br
            .col-xs-4
              label(translate) ExpYear
              select.form-control(ng-model="demo.expiration.year" required ng-options="year for year in years")
            .col-xs-12
              button.btn.btn-technorides.btn-lg.uppercase.shadow-bottom.pull-left(ng-click="demos.submited = true" type="submit" translate) Request
              br

  footer
    .container
      small.col-xs-12.text-right.uppercase  &copy; technorides, inc. all rights reserved
      .text-center
        a.social(href="https://www.facebook.com/technorides" target="_blank")
          img(src="assets/facebook.png")
        a.social(href="https://twitter.com/techno_rides"  target="_blank")
          img(src="assets/twitter.png")


.modal.fade.send(tabindex="-1", role="dialog", aria-labelledby="editOperation", aria-hidden="true", style="display: none;",data-backdrop="static")
  .modal-dialog
    .modal-content.modal-sm
      .panel.panel-dark.panel-alt
        .panel-heading
          .panel-btns
            a.panel-close(data-dismiss="modal", aria-hidden="true") &#215;
          // panel-btns
          h3.panel-title
        .panel-body.text-center
          .sending(ng-show="sending")
            p
            h1
              i.text-default.fa.fa-spinner.fa-pulse
          .sended(ng-show="sended")
            span.text-default Demo request succeded!
            h1
              i.text-success.fa.fa-check-circle
          .notsended(ng-show="errorSend")
            span.text-default There is been a error, please call us for more assistance
            h1
              i.text-danger.fa.fa-times-circle
