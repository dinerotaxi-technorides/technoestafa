    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")


    // Config
    script(src="scripts/demo.js")

    // Api
    script(src="/common/scripts/api/api.js")
    script(src="scripts/api/apiAdapter.js")
    script(src="scripts/api/apiHandler.js")

    // controller
    script(src="scripts/controllers/demoCtrl.js")

    // settings
    script(src="/common/scripts/settings.js")
    script(src="scripts/config/locale.js")

    // Main styles
    link(rel="stylesheet" type="text/css" href="styles/style.css")


