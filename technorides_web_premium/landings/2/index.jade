  body
      div(ng-if="showThankYou")
        #thankyou-background
        #thankyou
          .container
            .row
              .col-xs-2
                img(src="/common/assets/logo/logo-sm.png")
              .col-xs-10
                .row
                  .col-xs-12
                    h1
                      | {{'thankYou' | translate}}
                    p
                      | {{'thankYouMessage' | translate}}
                .row
                  .col-xs-12
                    button.pull-right.btn.btn-technorides.btn-lg(ng-click="acceptThankYou()")
                      | {{'ok' | translate}}

      nav.navbar.shadow-bottom(role="navigation")
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#collapse-button")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/")
              img.pull-left(src="/common/assets/logo/logo-sm.png")
              p.pull-left Techno
                span Rides
  section.banner#anchor
    .container
      .row
        .col-xs-12.col-md-6.text-inbanner
          h1.uppercase {{'bannerBigTitle' | translate}}
          p {{'bannerSubtitle' | translate}}
          br
          ul
            li
              i.fa.fa-check
              |  {{'bannerFeat1' | translate}}
            li
              i.fa.fa-check
              |  {{'bannerFeat2' | translate}}
            li
              i.fa.fa-check
              |  {{'bannerFeat3' | translate}}
            li
              i.fa.fa-check
              strong {{'bannerFeat4' | translate}}
          .testimony
            .col-xs-3
              img.img-responsive(src="assets/customer1.png")
            .col-xs-9
                p
                 em {{'Testimony1' | translate}}
                small.pull-right.text-right
                  em Alex Hall, Vincennes Livery, Chicago, US

        .col-xs-12.col-md-6.hidden-md.hidden-sm.hidden-xs
          .panel.panel-technorides.shadow-bottom
            .panel-heading.text-center
              h3.uppercase {{'getDemoToday' | translate}}
              .panel-body
                form(name="send1" ng-submit="send1.$valid && sendTrial(freeTrial)" ng-class="{submited: send1.submited}")
                  label {{'Name' | translate}}
                  .input-group
                    input.form-control(type="text" ng-model="freeTrial.name" ng-minlength="5" required)
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-user
                  br
                  label {{'CompanyName' | translate}}
                  .input-group
                    input.form-control(type="text" ng-model="freeTrial.companyName" ng-minlength="5" required)
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-building
                  br
                  label {{'Email' | translate}}
                  .input-group
                    input.form-control(type="text" ng-model="freeTrial.email" required ng-pattern="/.+@.+\\..+/")
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-envelope
                  br
                  label {{'Country' | translate}} 
                  .input-group
                    select.form-control(ng-model="freeTrial.country" ng-options="country for country in countries" name="country" ng-init="freeTrial.country = countries[0]" required)
                      option(value="{{location}}" ng-if="!freeTrial.country")
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-globe
                  br
                  .row
                    .col-xs-6
                      label {{'PhoneNumber' | translate}}
                      .input-group
                        input.form-control(type="text" ng-model="freeTrial.phone" required ng-pattern="/[\\d- \\+]{10,}/")
                        span.input-group-btn
                          span.btn.btn-technorides
                            i.fa.fa-phone
                    .col-xs-6
                      label {{'MobileNumber' | translate}}
                      .input-group
                        input.form-control(type="text" ng-model="freeTrial.mobile" required ng-pattern="/[\\d- \\+]{10,}/")
                        span.input-group-btn
                          span.btn.btn-technorides
                            i.fa.fa-mobile
                  .row
                    .col-xs-12
                      small {{"phoneWarning" | translate}}
                  br
                  label {{'Fleet' | translate}}
                  input(type="range" ng-model="freeTrial.fleet" min="10" max="2000" required)
                  .text-center
                    span.badge {{freeTrial.fleet}} {{'drivers' | translate}}
                  br
                  .text-center
                    button.btn.btn-warning.btn-lg.uppercase.shadow-bottom(type="submit" ng-click="send1.submited = true") {{'getTrialButton' | translate}}
                  br


  section
    .container
      .row.wrapper.hidden-lg
          .panel.panel-technorides
            .panel-heading.text-center
                h3.panel-title.uppercase {{'getDemoToday' | translate}}
              .panel-body
                form(name="send1" ng-submit="send1.$valid && sendTrial(freeTrial)" ng-class="{submited: send1.submited}" novalidate)
                  label {{'Name' | translate}}
                  .input-group
                    input.form-control(type="text" ng-model="freeTrial.name" required)
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-user
                  br
                  label {{'CompanyName' | translate}}
                  .input-group
                    input.form-control(type="text" ng-model="freeTrial.companyName" required)
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-building
                  br
                  label {{'Email' | translate}}
                  .input-group
                    input.form-control(type="text" ng-model="freeTrial.email" required)
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-envelope
                  br
                  label {{'Country' | translate}}
                  .input-group
                    select.form-control(ng-model="freeTrial.country" ng-options="country for country in countries" name="country" ng-init="countries[0]" required)
                      option(value="{{location}}" ng-if="!freeTrial.country")
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-globe
                  br
                  .row
                    .col-xs-6
                      label {{'PhoneNumber' | translate}}
                      .input-group
                        input.form-control(type="text" ng-model="freeTrial.phone" required ng-pattern="/[\\d- \\+]{10,}/")
                        span.input-group-btn
                          span.btn.btn-technorides
                            i.fa.fa-phone
                    .col-xs-6
                      label {{'MobileNumber' | translate}}
                      .input-group
                        input.form-control(type="text" ng-model="freeTrial.mobile" required ng-pattern="/[\\d- \\+]{10,}/")
                        span.input-group-btn
                          span.btn.btn-technorides
                            i.fa.fa-mobile
                  .row
                    .col-xs-12
                      small {{"phoneWarning" | translate}}
                  br
                  label {{'Fleet' | translate}}
                  input(type="range" ng-model="freeTrial.fleet" min="10" max="2000" required)
                  .text-center
                    span.badge {{freeTrial.fleet}} {{'drivers' | translate}}
                  br
                  .text-center
                    button.btn.btn-warning.btn-lg.uppercase.shadow-bottom(type="submit" ng-click="send1.submited = true") {{'getTrialButton' | translate}}
                  br
      .row.wrapper
        article.col-xs-12
          .col-xs-4
              img.img-responsive(src="/landings/2/assets/savetime.png")
              .text-center
                h4 {{'feature1' | translate}}
                p {{'feature1Desc' | translate}}
          .col-xs-4
              img.img-responsive(src="/landings/2/assets/digitalradio.png")
              .text-center
                h4 {{'feature2' | translate}}
                p {{'feature2Desc' | translate}}
          .col-xs-4
              img.img-responsive(src="/landings/2/assets/marketing.png")
              .text-center
                h4 {{'feature3' | translate}}
                p {{'feature3Desc' | translate}}
      .row.cinta
        h2.uppercase {{'whyTechnorides' | translate}}
        .col-xs-12
          .col-xs-12.col-md-6
            p {{'whyTechnorides1' | translate}}
            br
            p {{'whyTechnorides2' | translate}}
            br
            br
            .text-center
              a.btn.btn-warning.btn-lg.uppercase.shadow-bottom(href="#anchor" du-scrollspy du-smooth-scroll) {{'getDemoToday' | translate}}
          .col-xs-12.col-md-6
            iframe(width="100%" height="315" src="//www.youtube.com/embed/BGozWlYjtoI" frameborder="0" allowfullscreen ng-if="lang == 'es'")
            iframe(width="100%" height="315" src="//www.youtube.com/embed/wteZMWTcjwc" frameborder="0" allowfullscreen ng-if="lang == 'en' || lang== 'fr'")
      .deco1.hidden-xs
      .deco2.hidden-xs
      .row.wrapper
        .text-center
          .system
            img.img-responsive(src="/landings/2/assets/system_half.png" style="margin:0 auto")
