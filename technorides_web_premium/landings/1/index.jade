  body
      div(ng-if="showThankYou")
        #thankyou-background
        #thankyou
          .container
            .row
              .col-xs-2
                img(src="/common/assets/logo/logo-sm.png")
              .col-xs-10
                .row
                  .col-xs-12
                    h1
                      | {{'thankYou' | translate}}
                    p
                      | {{'thankYouMessage' | translate}}
                .row
                  .col-xs-12
                    button.pull-right.btn.btn-technorides.btn-lg(ng-click="acceptThankYou()")
                      | {{'ok' | translate}}

      nav.navbar.shadow-bottom(role="navigation")
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#collapse-button")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/")
              img.pull-left(src="/common/assets/logo/logo-sm.png")
              p.pull-left Techno
                span Rides
  section.banner
    .container
      .row
        .col-xs-12.col-md-6
          h1.uppercase {{'titleLanding' | translate}}
          small {{'subtitleLanding' | translate}}
          br
          img.banner-image(src="assets/system.png")
        .col-xs-12.col-md-6.hidden-sm.hidden-xs
          .panel.panel-technorides.shadow-bottom
            .panel-heading.text-center
                h3.panel-title.uppercase {{'getDemoToday' | translate}}
              .panel-body
                form(name="send2" ng-submit="send2.$valid && sendTrial(freeTrial)"  ng-class="{submited: send2.submited}")
                  label {{'Name' | translate}}
                  .input-group
                    input.form-control(type="text" ng-model="freeTrial.name" required ng-pattern="/[a-zA-Z,\. ]+/" name="name")
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-user
                  br
                  label {{'CompanyName' | translate}}
                  .input-group
                    input.form-control(type="text" ng-model="freeTrial.companyName" required name="companyname")
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-building
                  br
                  label {{'Email' | translate}}
                  .input-group
                    input.form-control(type="text" ng-model="freeTrial.email" required ng-pattern="/.+@.+\\..+/" name="email")
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-envelope
                  br
                  .row
                    .col-xs-6
                      label {{'PhoneNumber' | translate}}
                      .input-group
                        input.form-control(type="text" ng-model="freeTrial.phone" required ng-pattern="/[\\d- \\+]{10,}/")
                        span.input-group-btn
                          span.btn.btn-technorides
                            i.fa.fa-phone
                    .col-xs-6
                      label {{'MobileNumber' | translate}}
                      .input-group
                        input.form-control(type="text" ng-model="freeTrial.mobile" required ng-pattern="/[\\d- \\+]{10,}/" name="cellphone")
                        span.input-group-btn
                          span.btn.btn-technorides
                            i.fa.fa-mobile
                  .row
                    .col-xs-12
                      small {{"phoneWarning" | translate}}
                  br
                  label {{'Country' | translate}} 
                  .input-group
                    select.form-control(ng-model="freeTrial.country" ng-options="country for country in countries" name="country" ng-init="freeTrial.country = countries[0]" required)
                      option(value="{{location}}" ng-if="!freeTrial.country")
                    span.input-group-btn
                      span.btn.btn-technorides
                        i.fa.fa-globe

                  br
                  label {{'Fleet' | translate}}
                  input(type="range" ng-model="freeTrial.fleet" min="10" max="2000" required name="fleet")
                  .text-center
                    span.badge {{freeTrial.fleet}} {{'drivers' | translate}}
                  br
                  .text-center
                    button.btn.btn-warning.btn-lg.uppercase.shadow-bottom(ng-click="send2.submited = true" type="submit") {{'getTrialButton' | translate}}
                  br
          

