  body
      div(ng-if="showThankYou")
        #thankyou-background
        #thankyou
          .container
            .row
              .col-xs-2
                img(src="/common/assets/logo/logo-sm.png")
              .col-xs-10
                .row
                  .col-xs-12
                    h1
                      | {{'thankYou' | translate}}
                    p
                      | {{'thankYouMessage' | translate}}
                .row
                  .col-xs-12
                    button.pull-right.btn.btn-technorides.btn-lg(ng-click="acceptThankYou()")
                      | {{'ok' | translate}}

      nav.navbar.shadow-bottom(role="navigation")
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#collapse-button")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/")
              img.pull-left(src="/common/assets/logo/logo-sm.png")
              p.pull-left Techno
                span Rides
  section.banner
    .container
      .row
        .col-xs-12.col-md-6
          .text-inbanner
            h1.uppercase {{'bannerBigTitle' | translate}}
            p {{'bannerSubtitle' | translate}}
            form(name="send3" ng-submit="send3.$valid && sendTrial(freeTrial)" ng-class="{submited: send3.submited}")
              label {{'Name' | translate}}
              input.form-control(type="text" ng-model="freeTrial.name" required ng-pattern="/[a-zA-Z,\. ]+/")

              br
              label {{'CompanyName' | translate}}
              input.form-control(type="text" ng-model="freeTrial.companyName" required)

              br
              label {{'Email' | translate}}
              input.form-control(type="text" ng-model="freeTrial.email" required ng-pattern="/.+@.+\\..+/")

              br
              .row
                .col-xs-6
                  label {{'PhoneNumber' | translate}}
                  input.form-control(type="text" ng-model="freeTrial.phone" required ng-pattern="/[\\d- \\+]{5,}/")
                .col-xs-6
                  label {{'MobileNumber' | translate}}
                  input.form-control(type="text" ng-model="freeTrial.mobile" required ng-pattern="/[\\d- \\+]{5,}/")
              .row
                .col-xs-12
                  small {{"phoneWarning" | translate}}

              br
              label {{'Country' | translate}}
              select.form-control(ng-model="freeTrial.country" ng-options="country for country in countries" ng-init="freeTrial.country = countries[0]" required)
                option(value="{{location}}" ng-if="!freeTrial.country")

              br
              label {{'Fleet' | translate}}
              input.form-control(type="range" ng-model="freeTrial.fleet" min="10" max="2000" required)
              .text-center
                span.badge {{freeTrial.fleet}} {{'drivers' | translate}}
              br
              .text-center
                button.btn.btn-warning.btn-lg.uppercase.shadow-bottom.btn-block(ng-click="send3.submited = true") {{'bannerFormButton' | translate}}
              br
        .col-xs-12.col-md-6
  section#band
    .container
      h3.uppercase {{'middleTitle' | translate}}
  section.cont
    .container
      .row
        .col-xs-12.col-lg-6
          .col-xs-12
            .col-xs-3
              img.img-responsive(src="/landings/3/assets/savetime.png")
            .col-xs-9.featurete
              h4 {{'feature1' | translate}}
              p {{'feature1Desc' | translate}}
          .col-xs-12
            .col-xs-3
              img.img-responsive(src="/landings/3/assets/digitalradio.png")
            .col-xs-9.featurete
              h4 {{'feature2' | translate}}
              p {{'feature2Desc' | translate}}
          .col-xs-12
            .col-xs-3
              img.img-responsive(src="/landings/3/assets/marketing.png")
            .col-xs-9.featurete
              h4 {{'feature3' | translate}}
              p {{'feature3Desc' | translate}}
        .col-xs-12.col-lg-6
          .text-center
            img.img-responsive(src="/landings/3/assets/system.png")
  section.cont#bordered
    .container
      .row
        .col-xs-12.col-md-6
          iframe(width="100%" height="315" src="//www.youtube.com/embed/wteZMWTcjwc" frameborder="0" allowfullscreen)
        .col-xs-12.col-md-6
          .col-xs-12
            h1.uppercase {{'whyTechnorides' | translate}}
          .col-xs-3
            img.img-responsive(src="assets/customer1.png")
          .col-xs-9
              p {{'Testimony1' | translate}}
              small.pull-right.text-right
                br
                em Alex Hall, Vincennes Livery, Chicago, US

  footer
    .container
      .text-center.links
        a(href="#") {{'privaciPolicy' | translate}}
        a(href="#") {{'TermsOfUse' | translate}}
        a(href="#") {{'ContactUs' | translate}}
      .pull-right.uppercase {{'FolowUs' | translate}}
        a.social(href="https://www.facebook.com/technorides" target="_blank")
          img(src="assets/facebook.png")
        a.social(href="https://twitter.com/techno_rides"  target="_blank")
          img(src="assets/twitter.png")
