.contentpanel
  .row
    .col-sm-6.col-md-3
      .panel.panel-primary.panel-stat
        .panel-heading
          .stat
            .row
              .col-xs-4
                i.fa.fa-bar-chart
              .col-xs-8
                small.stat-label {{"operations" | translate}}
                h1 {{statistics.status.total}}
            .hidden
              .mb15
              .row
                .col-xs-6
                  small.stat-label {{"Total" | translate}}
                  h4 0
                .col-xs-6
                  small.stat-label {{"Total" | translate}}
                  h4 0
    .col-sm-6.col-md-3
      .panel.panel-success.panel-stat
        .panel-heading
          .stat
            .row
              .col-xs-4
                i.fa.fa-car
              .col-xs-8
                small.stat-label {{"Drivers" | translate}}
                h1 {{map.counters.drivers_online + map.counters.drivers_offline}}
                h1(ng-hide="map.counters.drivers_online + map.counters.drivers_offline !== undefined") 0
  
    .col-sm-6.col-md-3
      .panel.panel-warning.panel-stat
        .panel-heading
          .stat
            .row
              .col-xs-4
                i.fa.fa-user
              .col-xs-8
                small.stat-label {{'passengers' | translate}}
                h1 {{statistics.passengers.amount | number}}

    .col-sm-6.col-md-3
      .panel.panel-dark.panel-stat
        .panel-heading
          .stat
            .row
              .col-xs-4
                i.fa.fa-dollar
              .col-xs-8
                small.stat-label {{'earnings' | translate}}
                h3(style="margin-top:5px") $ {{statistics.earnings | number:2}}

  .row
    .col-sm-8.col-md-9
      .panel.panel-default
        .panel-body
          .row
            .col-sm-8
              h5.subtitle.mb5 {{"OperationsByStatus" | translate}}
              p.mb15 &nbsp;
              #basicflot(style="width: 100%; height: 300px; margin-bottom: 20px; padding: 0px; position: relative;")
            .col-sm-4
              h5.subtitle.mb5
                | &nbsp;
              p.mb15
                | &nbsp;
              span.sublabel {{"finished" | translate}}
              .progress.progress-sm
                .progress-bar.progress-bar-success(style="width: {{(statistics.status.finished * 100) / statistics.status.total   | number: 2}}%", aria-valuemax="100", aria-valuemin="0", aria-valuenow="40", role="progressbar")
              // progress
              span.sublabel {{"Canceled" | translate}}
              .progress.progress-sm
                .progress-bar.progress-bar-danger(style="width: {{(statistics.status.canceled * 100) / statistics.status.total | number: 2}}%", aria-valuemax="100", aria-valuemin="0", aria-valuenow="40", role="progressbar")
              // progress
              span.sublabel {{"Intransaction" | translate}}
              .progress.progress-sm
                .progress-bar.progress-bar-warning(style="width: {{(statistics.status.inTransaction * 100 ) /statistics.status.total | number: 2}}%", aria-valuemax="100", aria-valuemin="0", aria-valuenow="40", role="progressbar")
    .col-sm-4.col-md-3
      .panel.panel-default
        .panel-body
          h5.subtitle.mb5 {{'devices' | translate}}
          p.mb15
            | &nbsp;
            br
            | &nbsp;
          #donut-chart2.ex-donut-chart
