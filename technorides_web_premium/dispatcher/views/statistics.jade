.contentpanel
  .row
    .col-sm-6.col-md-3
      .panel.panel-primary.panel-stat
        .panel-heading
          .stat
            .row
              .col-xs-4
                i.fa.fa-bar-chart
              .col-xs-8
                small.stat-label {{"Operations" | translate}}
                h1 {{statistics.data.operations.byStatus.total | number}}
            .hidden
              .mb15
              .row
                .col-xs-6
                  small.stat-label {{"Total" | translate}}
                  h4 0
                .col-xs-6
                  small.stat-label {{"Total" | translate}}
                  h4 0
    .col-sm-6.col-md-3
      .panel.panel-success.panel-stat
        .panel-heading
          .stat
            .row
              .col-xs-4
                i.fa.fa-car
              .col-xs-8
                small.stat-label {{"Drivers" | translate}}
                h1 {{statistics.data.drivers.total | number}}
            .hidden
              .mb15
              .row
                .col-xs-6
                  small.stat-label {{"Free" | translate}}
                  h4 {{((statistics.data.drivers.online) * 100 / statistics.data.drivers.total) | number: 2}} %
                .col-xs-6
                  small.stat-label {{"Busy" | translate}}
                  h4 {{((statistics.data.drivers.intravel + statistics.data.drivers.offline) * 100 / statistics.data.drivers.total) | number: 2}} %
    .col-sm-6.col-md-3
      .panel.panel-warning.panel-stat
        .panel-heading
          .stat
            .row
              .col-xs-4
                i.fa.fa-user
              .col-xs-8
                small.stat-label {{"Passengers" | translate}}
                h1 {{statistics.data.others.passengers | number}}
            .hidden
              .mb15
              .row
                .col-xs-6
                  small.stat-label {{"Total" | translate}}
                  h4 0
                .col-xs-6
                  small.stat-label {{"Total" | translate}}
                  h4 0
    .col-sm-6.col-md-3
      .panel.panel-dark.panel-stat
        .panel-heading
          .stat
            .row
              .col-xs-4
                i.fa.fa-dollar
              .col-xs-8
                small.stat-label {{"Earnings" | translate}}
                h1 $ {{statistics.data.operations.earnings | number}}
            .hidden
              .mb15
              .row
                .col-xs-6
                  small.stat-label {{"Total" | translate}}
                  h4 $ 0.00
                .col-xs-6
                  small.stat-label {{"Total" | translate}}
                  h4 $ 0.00
  .row
    .col-sm-8.col-md-9
      .panel.panel-default
        .panel-body
          .row
            .col-sm-8
              h5.subtitle.mb5 {{"OperationsByStatus" | translate}}
              p.mb15 &nbsp;
              #basicflot(style="width: 100%; height: 300px; margin-bottom: 20px; padding: 0px; position: relative;")
            .col-sm-4
              h5.subtitle.mb5
                | &nbsp;
              p.mb15
                | &nbsp;
              span.sublabel {{"Finished" | translate}}
              .progress.progress-sm
                .progress-bar.progress-bar-success(style="width: {{statistics.data.operations.byStatus.percents.finished | number: 2}}%", aria-valuemax="100", aria-valuemin="0", aria-valuenow="40", role="progressbar")
              // progress
              span.sublabel {{"Canceled" | translate}}
              .progress.progress-sm
                .progress-bar.progress-bar-danger(style="width: {{statistics.data.operations.byStatus.percents.canceled | number: 2}}%", aria-valuemax="100", aria-valuemin="0", aria-valuenow="40", role="progressbar")
              // progress
              span.sublabel {{"InTransaction" | translate}}
              .progress.progress-sm
                .progress-bar.progress-bar-warning(style="width: {{statistics.data.operations.byStatus.percents.inTransaction | number: 2}}%", aria-valuemax="100", aria-valuemin="0", aria-valuenow="40", role="progressbar")
    .col-sm-4.col-md-3
      .panel.panel-default
        .panel-body
          h5.subtitle.mb5 {{"Devices" | translate}}
          p.mb15
            | &nbsp;
            br
            | &nbsp;
          #donut-chart2.ex-donut-chart
