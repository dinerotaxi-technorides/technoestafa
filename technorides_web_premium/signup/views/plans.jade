.text-center
  h2.uppercase {{'ChoosePackage' | translate}}
#pricing
  form(name="formStep3" ng-submit="checkStep3(user, plan, totalPrice)")
    .row
      .col-xs-12
        .table-responsive
          table.table
            thead
              tr.nohover
                th.empty 
                th.heading(ng-click="plan = 1; changePricePerDriver(user.company.fleet, plan)" style="cursor:pointer")
                  .ball.basic
                    img.img-responsive(src="/technorides/assets/pricing_basic.png")
                  .level.basic
                    h3.uppercase {{'pricingLevel1' | translate}}
                th.heading(ng-click="plan = 2; changePricePerDriver(user.company.fleet, plan)" style="cursor:pointer") 
                  .ball.advanced
                    img.img-responsive(src="/technorides/assets/pricing_advanced.png")
                  .level.advanced
                    h3.uppercase {{'pricingLevel2' | translate}}
                th.heading.recomended(ng-click="plan = 3; changePricePerDriver(user.company.fleet, plan)" style="cursor:pointer")
                  .ball.premium
                    img.img-responsive(src="/technorides/assets/pricing_premium.png")
                  span.recomendedbadge {{'recomended' | translate}}
                  .level.premium
                    h3.uppercase {{'pricingLevel3' | translate}}
                th.heading(ng-click="plan = 4; changePricePerDriver(user.company.fleet, plan)" style="cursor:pointer")
                  .ball.enterprise
                    img.img-responsive(src="/technorides/assets/pricing_enterprise.png")
                  .level.enterprise
                    h3.uppercase {{'pricingLevel4' | translate}}
            tbody
              tr(tooltip="{{'pricingFeat1Desc' | translate}}" tooltip-append-to-body="true")
                th.feat {{'pricingFeat1' | translate}}
                td.table-basic
                  i.fa.fa-check-circle
                td.table-advanced 
                  i.fa.fa-check-circle
                td.table-premium.recomended 
                  i.fa.fa-check-circle
                td.table-enterprise
                  i.fa.fa-check-circle
              tr(tooltip="{{'pricingFeat2Desc' | translate}}" tooltip-append-to-body="true")
                th.feat {{'pricingFeat2' | translate}}
                td.table-basic 
                  i.fa.fa-check-circle
                td.table-advanced 
                  i.fa.fa-check-circle
                td.table-premium.recomended 
                  i.fa.fa-check-circle
                td.table-enterprise 
                  i.fa.fa-check-circle
              tr(tooltip="{{'pricingFeat3Desc' | translate}}" tooltip-append-to-body="true")
                th.feat {{'pricingFeat3' | translate}}
                td.table-basic {{minimumDrivers[user.company.region]}}
                td.table-advanced {{minimumDrivers[user.company.region]}}
                td.table-premium.recomended {{minimumDrivers[user.company.region]}}
                td.table-enterprise {{minimumDrivers[user.company.region]}}

              tr(tooltip="{{'pricingFeat4Desc' | translate}}" tooltip-append-to-body="true")
                th.feat {{'pricingFeat4' | translate}}
                td.table-basic {{'Unlimited' | translate}}
                td.table-advanced {{'Unlimited' | translate}}
                td.table-premium.recomended  {{'Unlimited' | translate}}
                td.table-enterprise {{'Unlimited' | translate}}
              tr(tooltip="{{'pricingFeat5Desc' | translate}}" tooltip-append-to-body="true")
                th.feat {{'pricingFeat5' | translate}}
                td.table-basic 3
                  
                td.table-advanced 5
                td.table-premium.recomended  {{'Unlimited' | translate}}
                td.table-enterprise {{'Unlimited' | translate}}
              tr(tooltip="{{'pricingFeat7Desc' | translate}}" tooltip-append-to-body="true")
                th.feat {{'pricingFeat7' | translate}}
                td.table-basic
                td.table-advanced
                  i.fa.fa-check-circle
                td.table-premium.recomended 
                  i.fa.fa-check-circle
                td.table-enterprise
                  i.fa.fa-check-circle
              tr(tooltip="{{'pricingFeat6Desc' | translate}}" tooltip-append-to-body="true")
