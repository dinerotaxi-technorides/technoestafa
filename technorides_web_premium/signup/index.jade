  body
    div(ng-include="'/common/views/partials/version.html'")
    .container
      .row
        .col-xs-12
          .logo
            img.pull-left(src="/common/assets/logo/logo-sm.png")
            p.pull-left Techno
              span Rides
      .row
        .col-xs-12
          .text-center
            h1.uppercase {{'title' | translate}}
            p {{'subTitle' | translate}}
      .row
        .col-xs-12
          .wizzard
            ul.nav.nav-pills.nav-justified
              li(ng-class="{active: step == 1}")
                a 1. {{'step1Title' | translate}}
              li(ng-class="{active: step == 2}")
                a 2. {{'step2Title' | translate}}
              li(ng-class="{active: step == 3}")
                a 3. {{'step3Title' | translate}}
              li.last(ng-class="{active: step == 4}")
                a 4. {{'step4Title' | translate}}
          .wiz-content
            .steps
              .completed.pull-left
              .completed.pull-left(ng-class="{hidden: step == 1}")
              .completed.pull-left(ng-class="{hidden: step == 2 || step == 1}")
              .completed.pull-left(ng-class="{hidden: step == 3 || step == 2 || step == 1}")
            div(ng-if="step == 1")
              div(ng-include="'views/user-info.html'")
            div(ng-if="step == 2")
              div(ng-include="'views/company-info.html'")
            div(ng-if="step == 3")
              div(ng-include="'views/plans.html'")
            div(ng-if="step == 4")
              div(ng-include="'views/payment.html'")
