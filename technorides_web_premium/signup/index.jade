doctype html
html(ng-app="technoridesApp", lang="{{lang}}" ng-controller="signupCtrl")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="icon" href="/common/assets/logo/favicon.ico" type="image/x-icon")
    meta(name="description" content="")
    title {{'siteTitle' | translate}}

    // Bootstrap
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")

    // Angular
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-animate.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-route.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-cookies.js")
    script(src="//cdn.jsdelivr.net/angular.translate/2.1.0/angular-translate.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.2/angular-sanitize.js")

    // Map
    script(src="https://maps.googleapis.com/maps/api/js?&sensor=false")
    script(src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.js")
    script(src="/common/libs/angular-google-maps.min.js")

    // Jquery
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")


    // Angular-select
    script(src="/common/libs/angular-strap.min.js")

    // Config
    script(src="/signup/scripts/signup.js")

    // Api
    script(src="/common/scripts/api/api.js")
    script(src="/signup/scripts/services/api/apiHandler.js")
    script(src="/signup/scripts/services/api/apiAdapter.js")

    // Controller
    script(src="/signup/scripts/controllers/signupCtrl.js")

    // Settings
    script(src="/common/scripts/settings.js")
    script(src="/signup/scripts/config/locale.js")

    // Main styles
    link(rel="stylesheet" href="/signup/styles/signup.css")

    // Scroll
    script(src="/common/libs/angular-scroll.min.js")

    // Services
    script(src="/common/scripts/messages.js")

    // Angular-select
    script(src="/common/libs/angular-strap.min.js")

    //datetimepicker
    link(rel="stylesheet", type="text/css", href="/common/libs/datetimepicker.css")
    script(src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.2/moment.min.js")
    script(src="/common/libs/datetimepicker.js")


    // get country
    script(src="http://www.geoplugin.net/javascript.gp")
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
      script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Exo:400,400italic' rel='stylesheet' type='text/css')
    link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")

    // Analytics
    script(aync src="https://www.google-analytics.com/analytics.js")
    script(src="/common/libs/angulartics.min.js")
