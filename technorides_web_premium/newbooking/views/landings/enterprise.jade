section.header(style="background-image: url('assets/enterprise/bg.jpg');height: 700px")#home
  .inner-video
    .container
      .col-xs-12.inner-text.text-center
        h1.uppercase
          span(typed-translate="") enterprise.separatedTitle1
          span &nbsp;
          span.special(typed-translate="") enterprise.separatedTitle2
          span ,
          span &nbsp;
          span(typed-translate="") enterprise.separatedTitle3
        p(typed-translate="") enterprise.subTitle
