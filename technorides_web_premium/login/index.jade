  body.signin
    div(ng-include="'/common/views/partials/version.html'")
    // Preloader
    #preloader
      #status
        i.fa.fa-spinner.fa-spin.fa-3x
    section
      .signinpanel
        .row
          .col-md-7
            .signin-info
              .logopanel
                h1
                  img.pull-left(src="/common/assets/logo/logo-sm.png") 
                  p Techno
                    span Rides
            
              // logopanel
              .mb20
              h5
                strong {{'WelcomeMessage' | translate}}
              ul.hidden
                li
                  i.fa.fa-arrow-circle-o-right.mr5
                  | {{'PanelFeature1' | translate}}
                li
                  i.fa.fa-arrow-circle-o-right.mr5
                  | {{'PanelFeature2' | translate}}
                li
                  i.fa.fa-arrow-circle-o-right.mr5
                  | {{'PanelFeature3' | translate}}
                li
                  i.fa.fa-arrow-circle-o-right.mr5
                  | {{'PanelFeature4' | translate}}
                li
                  i.fa.fa-arrow-circle-o-right.mr5
                  | {{'PanelLastFeature' | translate}}
          .col-md-5
            form(name="loginForm", ng-submit="loginForm.$valid && login(credentials)", ng-class="{submited: loginForm.submited}", role="form", novalidate="")
              h4.nomargin {{'SignIn' | translate}}
              p.mt5.mb20 {{'LoginToAccess' | translate}}
              input.form-control.uname(type="text", name="username" , placeholder="{{'User' | translate}}",ng-model="credentials.user")
              input.form-control.pword(type="password", name="password", placeholder="{{'Password' | translate}}",ng-model="credentials.password")
              a(type="button" data-toggle="modal" data-target="#forgot-pass" href="")
                small {{'ForgotPassword' | translate}}
              button.btn.btn-success.btn-block(ng-click="loginForm.submited = true") {{'SignIn' | translate}}
        .signup-footer
          .pull-left
            | &#169; {{'copyRights' | translate}}

.modal.fade#forgot-pass(tabindex="-1", role="dialog", aria-labelledby="forgot", aria-hidden="true", style="display: none;")
  .modal-dialog
    .modal-content
      .panel.panel-dark.panel-alt
        .panel-heading
          
            
          h3.panel-title {{'ForgotPassword' | translate}}
        .panel-body
            | {{'forgotModal' | translate}}
            .form-group
              input.btn.btn-success.btn-md.pull-right(style="margin-right:5px",type="submit", value="{{'Ok' | translate}}" data-dismiss="modal", aria-hidden="true")
